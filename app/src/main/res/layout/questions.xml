<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/question_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/sno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:paddingLeft="10dp"
                android:gravity="right"
                android:textColor="@color/textHeading"
                android:layout_marginTop="15dp"
                android:textStyle="bold" />

            <WebView
                android:id="@+id/questions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:text="-"
                android:textColor="@color/textHeading"
                android:textSize="@dimen/primaryText"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
           android:layout_margin="5dp">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioGroup
                            android:id="@+id/radiogroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp">

                         <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/option1"
                                android:layout_width="31dp"
                                android:layout_height="31dp"
                                android:background="@color/white"
                                android:buttonTint="@color/textHeading"
                                android:text="Option 1"
                                android:textColor="@color/hintDark" />
                            <WebView
                                android:id="@+id/option_a_value"
                                android:layout_width="match_parent"
                                android:layout_margin="5dp"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <RadioButton
                            android:id="@+id/option2"
                            android:layout_width="31dp"
                            android:layout_height="31dp"
                            android:textColor="@color/hintDark"
                            android:background="@color/white"
                            android:buttonTint="@color/textHeading"
                            android:text="Option 2"/>

                        <WebView
                            android:id="@+id/option_b_value"
                            android:layout_width="match_parent"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/option3"
                            android:layout_width="31dp"
                            android:layout_height="31dp"
                            android:buttonTint="@color/textHeading"
                            android:text="Option 3"
                            android:background="@color/white"
                            android:textColor="@color/hintDark" />

                        <WebView
                            android:id="@+id/option_c_value"
                            android:layout_width="match_parent"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/option4"
                            android:layout_width="31dp"
                            android:layout_height="31dp"
                            android:textColor="@color/hintDark"
                            android:background="@color/white"
                            android:buttonTint="@color/textHeading"
                            android:text="Option 4"/>

                        <WebView
                            android:id="@+id/option_d_value"
                            android:layout_width="match_parent"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/option5_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/option5"
                            android:layout_width="31dp"
                            android:layout_height="31dp"
                            android:textColor="@color/hintDark"
                            android:background="@color/white"
                            android:layout_marginBottom="10dp"
                            android:buttonTint="@color/textHeading"
                            android:text="Option 5"/>
                        <WebView
                            android:id="@+id/option_e_value"
                            android:layout_width="match_parent"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </RadioGroup>

                    </LinearLayout>
                </LinearLayout>

        </LinearLayout>
            </LinearLayout>

    <LinearLayout
        android:id="@+id/nodata_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="150dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@drawable/no_data"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:text="@string/noQuestionFound"/>

    </LinearLayout>

</LinearLayout>